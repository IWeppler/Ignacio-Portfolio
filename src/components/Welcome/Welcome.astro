---
import styles from "./Welcome.module.css";
import { t, getValidLang } from "../../utils/i18n";
import TextPressure from "./TextPressure.tsx";

const { lang } = Astro.params;
const langCode = getValidLang(lang);
---

<section id="inicio" class={styles.inicio}>
  <div class={styles.subMain}>
    <div class={styles.status}>
      <span class={styles.dot}></span>
      <p>{t(langCode, "welcome.state")}</p>
    </div>

    <small>IGNACIO WEPPLER</small>
    <div class={styles.h1Container}>
      <TextPressure
        text="Fullstack Dev"
        textColor="var(--mainColor)"
        client:load
      />
    </div>
    <div class={styles.containerBtn}>
      <a
        href="https://api.whatsapp.com/send?text=Hola, quiero comenzar con mi proyecto!&phone=+541154702118"
        target="_blank"
        ><button class={styles.firstBtn}
          >{t(langCode, "welcome.btn-cta")}</button
        ></a
      >

      {/* --- ICONO LINKEDIN --- */}
      <a
        href="https://www.linkedin.com/in/ignacioweppler/"
        target="_blank"
        rel="noopener"
        aria-label="Visita mi perfil de LinkedIn"
        class={styles.iconContainer}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="30"
          height="30"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class={styles.icon}
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M8 11v5"></path>
          <path d="M8 8v.01"></path>
          <path d="M12 16v-5"></path>
          <path d="M16 16v-3a2 2 0 1 0 -4 0"></path>
          <path
            d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z"
          ></path>
        </svg>
      </a>

      {/* --- ICONO INSTAGRAM --- */}
      <a
        href="https://github.com/IWeppler"
        target="_blank"
        rel="noopener"
        aria-label="Visita mi perfil de Instagram"
        class={styles.iconContainer}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-github-icon lucide-github"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
      </a>
    </div>
  </div>
</section>
