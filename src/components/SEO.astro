---
const {
  title = "Ignacio Weppler - Desarrollador Web",
  description = "Portfolio de Ignacio Weppler, desarrollador web Full Stack con orientaci√≥n al Frontend. Experiencia en React, Next.js, Tailwind y Astro.",
  image = "/seoignacio.jpg",
  schema = null
} = Astro.props;

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Ignacio Weppler",
  "url": Astro.site.href,
  "image": new URL(image, Astro.site).href,
  "sameAs": [
    "https://www.linkedin.com/in/ignacioweppler",
    "https://github.com/IWeppler",
    "https://www.instagram.com/ignacioweppler/",
  ],
  "jobTitle": "Desarrollador Web Full Stack",
  "worksFor": {
    "@type": "Organization",
    "name": "Ignacio Weppler (Freelance)"
  }
};

const schemas = [personSchema];
if (schema) {
  schemas.push(schema);
}

const absoluteImageUrl = new URL(image, Astro.site).href;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).href;

const siteName = "Ignacio Weppler";
const pageTitle = title === "Ignacio Weppler - Desarrollador Web" ? title : `${title} | ${siteName}`;
---

<title>{pageTitle}</title>
<link rel="canonical" href={canonicalUrl} />

<meta name="description" content={description} />
<meta name="author" content="Ignacio Weppler" />
<meta name="keywords" content="Ignacio Weppler, Portfolio, Desarrollador Web, Full Stack, Frontend, React, Next.js, Astro, Tailwind" />

<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:image" content={absoluteImageUrl} />
<meta property="og:site_name" content={siteName} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={absoluteImageUrl} />


<script type="application/ld+json" set:html={JSON.stringify(schemas)} />