---
import styles from "./AboutMe.module.css";
import { t, getValidLang } from '../../utils/i18n';

const { lang } = Astro.params;
const langCode = getValidLang(lang);
---

<section class={styles.firstPart} id="aboutme">
  <div class={styles.titles}>
    <h3>{t(langCode, "aboutme.title")}</h3>
  </div>

  <div class={styles.scrollReveal}>
    <div class={styles.containerServices}>
      <p class={styles.revealText}>
        {t(langCode, "aboutme.paragraph1")}
        <span class={styles.spanAboutMe}>{t(langCode, "aboutme.span1")}</span>
        <br /><br />
        {t(langCode, "aboutme.paragraph2")}
        <span class={styles.spanAboutMe}>{t(langCode, "aboutme.span2")}</span>
        {t(langCode, "aboutme.question")}
        <a
          href="#contacto"
          class={styles.linkCTA}
          aria-label={t(langCode, "aboutme.cta_label")}>
          {t(langCode, "aboutme.cta_text")}
          <svg viewBox="-35 -10 140 50" class={styles.underlineSVG}>
             <path d="M6.9739 30.8153H63.0244C65.5269 30.8152 75.5358 -3.68471 35.4998 2.81531C-16.1598 11.2025 0.894099 33.9766 26.9922 34.3153C104.062 35.3153 54.5169 -6.68469 23.489 9.31527" />
          </svg>
        </a>
      </p>
    </div>
  </div>

  <div class={styles.wrapperIcons}>
    <i class="devicon-html5-plain-wordmark"></i>
    <i class="devicon-css3-plain-wordmark"></i>
    <i class="devicon-javascript-plain"></i>
    <i class="devicon-typescript-plain"></i>
    <i class="devicon-nodejs-plain-wordmark"></i>
    <i class="devicon-express-original"></i>
    <i class="devicon-astro-plain"></i>
    <i class="devicon-react-original"></i>
    <i class="devicon-nextjs-plain"></i>
    <i class="devicon-tailwindcss-original"></i>
    <i class="devicon-mongodb-plain-wordmark"></i>
    <i class="devicon-mongoose-original-wordmark"></i>
    <i class="devicon-postgresql-plain-wordmark"></i>
    <i class="devicon-git-plain-wordmark"></i>
    <i class="devicon-github-original-wordmark"></i>
  </div>
</section>
