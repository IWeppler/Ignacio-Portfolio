---
export async function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "pt" } },
    { params: { lang: "es" } },
  ];
}

import Navbar from "../../components/Navbar/Navbar.astro";
import Welcome from "../../components/Welcome/Welcome.astro";
import Banner from "../../components/Banner/Banner.astro";
